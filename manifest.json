{
  "manifest_version": 3,
  "name": "FocusGuard - Website Blocker & Focus Timer",
  "version": "1.0.0",
  "description": "Block distracting websites, schedule focus sessions, sync across devices. Features account system, password protection, and detailed analytics.",
  
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "identity"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "auth.html",
        "assets/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://*.supabase.co https://api.stripe.com https://*.stripe.com;"
  },
  
  "minimum_chrome_version": "102"
}
